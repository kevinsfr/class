<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.shengfanrui.prog01.MainActivity">


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:hint="Input Number"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:id="@+id/number" />

    <TextView
        android:hint="Minutes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/number"
        android:layout_alignStart="@id/number"
        android:id="@+id/unit" />

    <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/unit"
        android:layout_alignParentStart="true">
        <RadioButton android:id="@+id/pushup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pushup" />

        <RadioButton android:id="@+id/situp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Situp" />
        <RadioButton android:id="@+id/squats"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Squats" />
        <RadioButton android:id="@+id/leg_lift"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Leg-lift" />
        <RadioButton android:id="@+id/plank"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Plank" />
        <RadioButton android:id="@+id/jumping_jacks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jumping Jacks" />
        <RadioButton android:id="@+id/pullup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pullup" />
        <RadioButton android:id="@+id/cycling"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cycling" />
        <RadioButton android:id="@+id/walking"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Walking" />
        <RadioButton android:id="@+id/jogging"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jogging" />
        <RadioButton android:id="@+id/swimming"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Swimming" />
        <RadioButton android:id="@+id/stair_climbing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Stair-Climbing" />
    </RadioGroup>

    <Button
        android:text="Convert"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/type"
        android:id="@+id/convert" />

    <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/type2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/unit2"
        android:layout_alignStart="@id/unit2">
        <RadioButton android:id="@+id/pushup2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pushup" />
        <RadioButton android:id="@+id/situp2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Situp" />
        <RadioButton android:id="@+id/squats2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Squats" />
        <RadioButton android:id="@+id/leg_lift2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Leg-lift" />
        <RadioButton android:id="@+id/plank2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Plank" />
        <RadioButton android:id="@+id/jumping_jacks2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jumping Jacks" />
        <RadioButton android:id="@+id/pullup2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pullup" />
        <RadioButton android:id="@+id/cycling2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cycling" />
        <RadioButton android:id="@+id/walking2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Walking" />
        <RadioButton android:id="@+id/jogging2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jogging" />
        <RadioButton android:id="@+id/swimming2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Swimming" />
        <RadioButton android:id="@+id/stair_climbing2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Stair-Climbing" />
    </RadioGroup>

    <TextView
        android:hint="Amount of calories"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:id="@+id/output"
        android:layout_marginTop="10dp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/type" />

    <TextView
        android:hint="Equivalent amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/otherType"
        android:layout_below="@+id/output"
        android:layout_alignStart="@+id/output" />

    <TextView
        android:hint="Minutes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/otherType"
        android:layout_alignStart="@id/otherType"
        android:id="@+id/unit2" />

</RelativeLayout>
